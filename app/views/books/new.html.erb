<p id="notice">
  <%= flash[:notice] %>
</p>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title%>
    </div>

    <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Create book'%>
  <% end %>