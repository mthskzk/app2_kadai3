<main>
  <div class="container">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h3>
          <%= @user.errors.count %> errors prohibited this obj from being saved:
        </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <%= f.text_field :name, autofocus: true, placeholder:"名前", class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, placeholder: "紹介文", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.button "Update User", type: "submit", :class => "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>



